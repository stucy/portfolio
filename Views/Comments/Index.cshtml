        <div class="comment-container">
            <div class="form-group">
                @if (SignInManager.IsSignedIn(User))
                {
                    <input type="text" placeholder="Username" value="@userData.UserName" id="username" disabled>
                }
                else
                {
                    <input type="text" placeholder="Username" id="username">
                }
                <input type="text" placeholder="Comment" id="comment">
                <input type="hidden" id="RequestVerificationToken" name="__RequestVerificationToken" value="@token" />
            </div>

            <div class="comments">
                <ul id="commentContainer">
                    @foreach (var item in Model)
                    {
                        <li>
                            <span class="username">@Html.DisplayFor(modelItem => item.Username):</span>
                            @Html.DisplayFor(modelItem => item.Comment)
                            <span class="date">
                                @Html.DisplayFor(modelItem => item.Date)
                                <span class="delete" onclick="deleteComment(@Html.DisplayFor(modelItem => item.CommentId))">x</span>
